{
    "name": "@bobosneefdev/zongodb",
    "version": "3.0.0",
    "description": "Zod schemas + MongoDB",
    "packageManager": "bun@1.3.5",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.mjs",
            "require": "./dist/index.js"
        }
    },
    "directories": {
        "test": "test"
    },
    "publishConfig": {
        "registry": "https://registry.npmjs.org"
    },
    "scripts": {
        "prepublishOnly": "npm run build",
        "check": "tsc --noEmit",
        "build": "tsup",
        "build:full": "bun run check && bun run build",
        "test": "bun test"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/bobosneefdev/ZongoDB.git"
    },
    "keywords": [
        "mongodb",
        "zod"
    ],
    "author": "bobosneefdev",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/bobosneefdev/ZongoDB/issues"
    },
    "homepage": "https://github.com/bobosneefdev/ZongoDB#readme",
    "devDependencies": {
        "@types/jest": "^30.0.0",
        "@types/node": "^25.1.0",
        "tsup": "^8.5.1",
        "typescript": "^5.9.3"
    },
    "dependencies": {
        "@biomejs/biome": "^2.3.13",
        "@bobosneefdev/zodutil": "^2.0.12",
        "dotenv": "^17.2.3",
        "mongodb": "^7.0.0",
        "zod": "^4.3.6"
    },
    "files": [
        "dist",
        "README.md",
        "LICENSE"
    ]
}
